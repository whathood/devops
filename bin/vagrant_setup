#!/usr/bin/env ruby

# run vagrant for the first time

src_dir = "whathood"

cmds = [
  "rm -rf whathood",
  "mkdir -p #{src_dir}/src",
  "mkdir -p #{src_dir}/log",
  "vagrant plugin install vagrant-vbguest",
  "vagrant plugin install vagrant-triggers",
  "vagrant plugin install vagrant-rsync-back",
  "./bin/vagrant_provision"
]

cmds.each { |cmd|
  puts cmd
  unless system(cmd)
    abort "could not execute command: '#{cmd}'"
  end
}
