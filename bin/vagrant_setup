#!/usr/bin/env ruby

# run vagrant for the first time

cmds = [
  "/usr/local/bin/vagrant box add ubuntu/trusty64 || true",
  "/usr/local/bin/vagrant plugin install vagrant-vbguest || true",
  "/usr/local/bin/vagrant plugin install vagrant-triggers || true",
#  "/usr/local/bin/vagrant plugin install vagrant-box-updater || true",
  #"/usr/local/bin/vagrant plugin install vagrant-rsync-back || true",
  "/usr/local/bin/vagrant up --provision"
]

cmds.each { |cmd|
  puts cmd
  unless system(cmd)
    abort "could not execute command: '#{cmd}'"
  end
}
