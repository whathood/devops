#!/usr/bin/env ruby

# Build the docker containers required by Whathood from whathood-devops

home = ENV['HOME']

puts "*      cloning whathood devops"
system "mkdir #{home}/src"
system "git clone https://github.com/whathood/wh-devops.git #{home}/src/wh-devops"

Dir.chdir "#{home}/src/wh-devops"

system "sudo ./bin/setup"
