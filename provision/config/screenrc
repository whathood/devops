# Set the default window name to empty string instead of the arbitrary "bash"
#shelltitle ''

caption always "%{= KW}%-Lw%{= wb}%n %t %{= KW}%+Lw %-=| ${USER}@%H | %M%d %c%{-}"
term screen-256color

screen -t
select 0
stuff "tail -f /var/log/whathood/foreman.log &^M"
stuff "tail -f /var/log/whathood/nginx-access.log &^M"
stuff "tail -f /var/log/whathood/nginx-error.log &^M"
stuff "tail -f /var/log/whathood/php-zend.log &^M"

screen -t
select 1
stuff "cd /home/vagrant/src/whathood"
